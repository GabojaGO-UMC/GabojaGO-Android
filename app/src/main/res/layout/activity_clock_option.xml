<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/clock_background_iv"
        android:layout_width="match_parent"
        android:layout_height="530dp"
        android:background="@drawable/option_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <TextView
        android:id="@+id/clock_option_tv"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:fontFamily="@font/apple_sd_gothic_neo_sb"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="#23354F"
        android:text="옵션 설정하기"
        android:layout_marginTop="35dp"
        app:layout_constraintTop_toTopOf="@id/clock_background_iv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <TextView
        android:id="@+id/clock_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="뱡항의 범위를 정해줘!"
        android:fontFamily="@font/apple_sd_gothic_neo_sb"
        android:textStyle="normal"
        android:textSize="14sp"
        android:textColor="#a9a9a9"
        app:layout_constraintStart_toStartOf="@id/clock_background_iv"
        app:layout_constraintEnd_toEndOf="@id/clock_background_iv"
        app:layout_constraintTop_toBottomOf="@id/clock_option_tv"
        />

    <TextView
        android:id="@+id/clock_start_tv"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:textSize="28sp"
        android:text="9"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:fontFamily="@font/apple_sd_gothic_neo_sb"
        android:background="@drawable/item_box"
        android:gravity="center"
        android:layout_marginTop="35dp"
        app:layout_constraintStart_toStartOf="@id/clock_background_iv"
        app:layout_constraintEnd_toEndOf="@id/clock_background_iv"
        app:layout_constraintTop_toBottomOf="@id/clock_name_tv"
        app:layout_constraintHorizontal_bias="0.3"
        />

    <TextView
        android:id="@+id/clock_start_01_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="시 방향"
        android:textSize="24sp"
        android:fontFamily="@font/apple_sd_gothic_neo_sb"
        android:textColor="@color/black"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@id/clock_start_tv"
        app:layout_constraintTop_toTopOf="@id/clock_start_tv"
        app:layout_constraintBottom_toBottomOf="@id/clock_start_tv"
        />
    <TextView
        android:id="@+id/clock_start_02_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="부터"
        android:textSize="18sp"
        android:fontFamily="@font/apple_sd_gothic_neo_sb"
        android:layout_marginStart="5dp"
        app:layout_constraintStart_toEndOf="@id/clock_start_01_tv"
        app:layout_constraintTop_toTopOf="@id/clock_start_tv"
        app:layout_constraintBottom_toBottomOf="@id/clock_start_tv"
        />

    <TextView
        android:id="@+id/clock_end_tv"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:textSize="28sp"
        android:text="9"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:fontFamily="@font/apple_sd_gothic_neo_sb"
        android:background="@drawable/item_box"
        android:gravity="center"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="@id/clock_background_iv"
        app:layout_constraintEnd_toEndOf="@id/clock_background_iv"
        app:layout_constraintTop_toBottomOf="@id/clock_start_tv"
        app:layout_constraintHorizontal_bias="0.3"
        />

    <TextView
        android:id="@+id/clock_end_01_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="시 방향"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/apple_sd_gothic_neo_sb"
        app:layout_constraintStart_toEndOf="@id/clock_end_tv"
        app:layout_constraintTop_toTopOf="@id/clock_end_tv"
        app:layout_constraintBottom_toBottomOf="@id/clock_end_tv"
        />
    <TextView
        android:id="@+id/clock_end_02_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="까지"
        android:textSize="18sp"
        android:fontFamily="@font/apple_sd_gothic_neo_sb"
        android:layout_marginStart="5dp"
        app:layout_constraintStart_toEndOf="@id/clock_end_01_tv"
        app:layout_constraintTop_toTopOf="@id/clock_end_tv"
        app:layout_constraintBottom_toBottomOf="@id/clock_end_tv"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="가고 싶어!"
        android:textSize="18sp"
        android:fontFamily="@font/apple_sd_gothic_neo_sb"
        android:layout_marginStart="5dp"
        android:layout_marginTop="18dp"
        app:layout_constraintStart_toStartOf="@id/clock_background_iv"
        app:layout_constraintEnd_toEndOf="@id/clock_background_iv"
        app:layout_constraintTop_toBottomOf="@id/clock_end_tv"
        />

    <ImageView
        android:id="@+id/clock_comp_btn"
        android:layout_width="290dp"
        android:layout_height="70dp"
        android:src="@drawable/option_complete"
        android:layout_marginBottom="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/apple_sd_gothic_neo_sb"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="#ffffff"
        android:gravity="center_horizontal"
        android:text="완료"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/clock_comp_btn"
        app:layout_constraintBottom_toBottomOf="@id/clock_comp_btn"
        app:layout_constraintVertical_bias="0.4"/>

</androidx.constraintlayout.widget.ConstraintLayout>