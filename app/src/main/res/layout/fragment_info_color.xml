<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <!--Title-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/info_color_title_view"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="#fafafa"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:elevation="12dp"
        >

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/info_color_back_btn"
            android:layout_width="10.16dp"
            android:layout_height="17dp"
            android:background="@drawable/backarrow"
            android:layout_marginStart="19dp"
            android:layout_marginBottom="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:layout_width="192dp"
            android:layout_height="29dp"
            android:fontFamily="@font/nanum_square_round_extrabold"
            android:textStyle="normal"
            android:layout_marginBottom="15dp"
            android:textSize="20sp"
            android:textColor="#000000"
            android:gravity="center_horizontal"
            android:text="컬러박스 뽑기"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/info_color_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="럭키박스를 뽑는 마음으로 오늘 모험의 색깔을 정해보세요.\n아래는 컬러박스 뽑기를 활용할 수 있는 예시입니다."
        android:textSize="10sp"
        android:textColor="#000000"
        android:gravity="center"
        android:fontFamily="@font/apple_sd_gothic_neo_r"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/info_color_title_view"
        app:layout_constraintBottom_toTopOf="@id/info_color_contents_sv"
        />

    <ScrollView
        android:id="@+id/info_color_contents_sv"
        android:layout_width="326dp"
        android:layout_height="450dp"
        android:background="@drawable/info_bg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/info_color_title_view"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.5"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/info_clock_title_01_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="# 00색 계열"
                android:fontFamily="@font/apple_sd_gothic_neo_sb"
                android:textSize="14sp"
                android:textColor="#000000"
                android:layout_marginStart="26dp"
                android:layout_marginTop="38dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/info_clock_contents_01_tv"
                android:layout_width="271dp"
                android:layout_height="wrap_content"
                android:text="새로운 시도를 응원해요"
                android:fontFamily="@font/apple_sd_gothic_neo_r"
                android:textSize="10sp"
                android:layout_marginStart="26dp"
                android:layout_marginTop="13dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/info_clock_title_01_tv"
                />
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/info_clock_example_01_iv"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/info_example"
                android:layout_marginStart="26dp"
                android:layout_marginTop="19dp"
                app:layout_constraintTop_toBottomOf="@id/info_clock_contents_01_tv"
                app:layout_constraintStart_toStartOf="parent"
                />
            <LinearLayout
                android:id="@+id/info_clock_example_01_ll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="9dp"
                android:layout_marginTop="19dp"
                app:layout_constraintStart_toEndOf="@id/info_clock_example_01_iv"
                app:layout_constraintTop_toBottomOf="@id/info_clock_contents_01_tv"
                >
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="노란색 계열로 코디에 포인트 주기"
                    android:textColor="#000000"
                    android:fontFamily="@font/apple_sd_gothic_neo_r"
                    android:textSize="12sp"
                    />
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="갈색 계열 간판의 카페에 들어가기"
                    android:layout_marginTop="5dp"
                    android:textColor="#000000"
                    android:fontFamily="@font/apple_sd_gothic_neo_r"
                    android:textSize="12sp"
                    />
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="검은색 계열 건물에 들어가기"
                    android:layout_marginTop="5dp"
                    android:textColor="#000000"
                    android:fontFamily="@font/apple_sd_gothic_neo_r"
                    android:textSize="12sp"
                    />
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="초록색 계열 음료수 마시기"
                    android:layout_marginTop="5dp"
                    android:textColor="#000000"
                    android:fontFamily="@font/apple_sd_gothic_neo_r"
                    android:textSize="12sp"
                    />
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="마젠타 계열의 다이어리 구매하기"
                    android:layout_marginTop="5dp"
                    android:textColor="#000000"
                    android:fontFamily="@font/apple_sd_gothic_neo_r"
                    android:textSize="12sp"
                    />
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="빨간색 포스터의 전시회 보러가기"
                    android:layout_marginTop="5dp"
                    android:textColor="#000000"
                    android:fontFamily="@font/apple_sd_gothic_neo_r"
                    android:textSize="12sp"
                    />
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="흰색 표지의 책 중, 눈에 3번째로 보이는 책 읽기"
                    android:layout_marginTop="5dp"
                    android:textColor="#000000"
                    android:fontFamily="@font/apple_sd_gothic_neo_r"
                    android:textSize="12sp"
                    />
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/info_color_icon"
        android:layout_width="106.37dp"
        android:layout_height="156.81dp"
        android:src="@drawable/icon_exclam"
        android:layout_marginEnd="7dp"
        android:layout_marginBottom="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>