<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/goagain_title_view"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="#fafafa"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:elevation="20dp" >

        <ImageView
            android:id="@+id/goagain_bookmark_iv"
            android:layout_width="27dp"
            android:layout_height="34dp"
            android:src="@drawable/bookmark_orange"
            android:scaleType="centerCrop"
            android:layout_marginStart="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/goagain_Title_tv"
            app:layout_constraintBottom_toBottomOf="@id/goagain_Title_tv"/>

        <TextView
            android:id="@+id/goagain_Title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nanum_square_round_extrabold"
            android:textStyle="normal"
            android:textSize="32.3sp"
            android:textColor="#000000"
            android:text="또 가자"
            android:layout_marginTop="60dp"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@+id/goagain_bookmark_iv"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/apple_sd_gothic_neo_sb"
        android:textSize="14sp"
        android:textColor="#787878"
        android:text="인상깊었던 곳을 기록해주세요!"
        android:layout_marginTop="45dp"
        app:layout_constraintTop_toBottomOf="@id/goagain_title_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/goagain_circle_plus_iv"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:src="@drawable/goagain_plus"
        android:scaleType="centerCrop"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="7dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>