<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <!--Background-->
    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="match_parent"
        android:layout_height="543dp"
        android:scaleType="fitXY"
        android:src="@drawable/info_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/home_info_title_view"
        />

    <!--Title-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/home_info_title_view"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="#fafafa"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/home_info_back_btn"
            android:layout_width="10.16dp"
            android:layout_height="17dp"
            android:background="@drawable/backarrow"
            android:layout_marginStart="19dp"
            android:layout_marginBottom="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:layout_width="192dp"
            android:layout_height="29dp"
            android:fontFamily="@font/nanum_square_round_extrabold"
            android:textStyle="normal"
            android:layout_marginBottom="15dp"
            android:textSize="20sp"
            android:textColor="#000000"
            android:gravity="center_horizontal"
            android:text="활용 설명서"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!--Contents-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/home_info_menu_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/home_info_title_view"
        app:layout_constraintBottom_toTopOf="@id/home_info_icon"
        >
        <!--Wheel-->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/home_info_wheel_view"
            android:layout_width="338dp"
            android:layout_height="95dp"
            android:background="@drawable/info_menu_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            >
            <ImageView
                android:id="@+id/info_menu_wheel_iv"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/resultimage_dolimpan_orange"
                android:layout_marginStart="24dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.45"
                />
            <TextView
                android:id="@+id/info_menu_wheel_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/apple_sd_gothic_neo_r"
                android:textSize="18sp"
                android:textColor="#000000"
                android:gravity="center_horizontal"
                android:text="돌려돌려 돌림판"
                android:layout_marginStart="21dp"
                app:layout_constraintStart_toEndOf="@id/info_menu_wheel_iv"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.45"
                />
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="7.21dp"
                android:layout_height="12.84dp"
                android:src="@drawable/goarrow"
                android:layout_marginEnd="24.21dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintVertical_bias="0.45"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!--Clock-->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/home_info_clock_view"
            android:layout_width="338dp"
            android:layout_height="95dp"
            android:background="@drawable/info_menu_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/home_info_wheel_view"
            >
            <ImageView
                android:id="@+id/info_menu_clock_iv"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/resultimage_nsibang_orange"
                android:layout_marginStart="24dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.45"
                />
            <TextView
                android:id="@+id/info_menu_clock_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/apple_sd_gothic_neo_r"
                android:textSize="18sp"
                android:textColor="#000000"
                android:gravity="center_horizontal"
                android:text="N시 방향"
                android:layout_marginStart="21dp"
                app:layout_constraintStart_toEndOf="@id/info_menu_clock_iv"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.45"
                />
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="7.21dp"
                android:layout_height="12.84dp"
                android:src="@drawable/goarrow"
                android:layout_marginEnd="24.21dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintVertical_bias="0.45"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!--Color-->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/home_info_color_view"
            android:layout_width="338dp"
            android:layout_height="95dp"
            android:background="@drawable/info_menu_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/home_info_clock_view"
            >
            <ImageView
                android:id="@+id/info_menu_color_iv"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/resultimage_japangi_orange"
                android:layout_marginStart="24dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.45"
                />
            <TextView
                android:id="@+id/info_menu_color_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/apple_sd_gothic_neo_r"
                android:textSize="18sp"
                android:textColor="#000000"
                android:gravity="center_horizontal"
                android:text="컬러 박스 뽑기"
                android:layout_marginStart="21dp"
                app:layout_constraintStart_toEndOf="@id/info_menu_color_iv"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.45"
                />
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="7.21dp"
                android:layout_height="12.84dp"
                android:src="@drawable/goarrow"
                android:layout_marginEnd="24.21dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintVertical_bias="0.45"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!--Number-->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/home_info_number_view"
            android:layout_width="338dp"
            android:layout_height="95dp"
            android:background="@drawable/info_menu_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/home_info_color_view"
            >
            <ImageView
                android:id="@+id/info_menu_number_iv"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/resultimage_random_orange"
                android:layout_marginStart="26dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.45"
                />
            <TextView
                android:id="@+id/info_menu_number_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/apple_sd_gothic_neo_r"
                android:textSize="18sp"
                android:textColor="#000000"
                android:gravity="center_horizontal"
                android:text="빙글빙글 숫자뽑기"
                android:layout_marginStart="21dp"
                app:layout_constraintStart_toEndOf="@id/info_menu_number_iv"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.45"
                />
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="7.21dp"
                android:layout_height="12.84dp"
                android:src="@drawable/goarrow"
                android:layout_marginEnd="24.21dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintVertical_bias="0.45"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/home_info_icon"
        android:layout_width="70.85dp"
        android:layout_height="135.55dp"
        android:src="@drawable/icon_question"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/home_info_menu_view"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>