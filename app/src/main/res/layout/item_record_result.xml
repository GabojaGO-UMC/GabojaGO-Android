<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/item_record_rectangle_iv"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@drawable/rectangle_gray"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/item_record_circle_iv"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/resultimage_dolimpan_gray"
        android:layout_marginStart="17dp"
        app:layout_constraintStart_toStartOf="@id/item_record_rectangle_iv"
        app:layout_constraintTop_toTopOf="@id/item_record_rectangle_iv"
        app:layout_constraintBottom_toBottomOf="@id/item_record_rectangle_iv"/>

    <ImageView
        android:id="@+id/item_record_title_iv"
        android:layout_width="wrap_content"
        android:layout_height="13dp"
        android:src="@drawable/dolimpan"
        android:scaleType="fitStart"
        android:layout_marginStart="11dp"
        app:layout_constraintStart_toEndOf="@id/item_record_circle_iv"
        app:layout_constraintTop_toTopOf="@id/item_record_circle_iv"
        app:layout_constraintBottom_toTopOf="@id/item_record_result_tv"/>

    <TextView
        android:id="@+id/item_record_result_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/apple_sd_gothic_neo_sb"
        android:textSize="16sp"
        android:layout_marginTop="3dp"
        android:textColor="#000000"
        android:text="버스"
        app:layout_constraintStart_toStartOf="@id/item_record_title_iv"
        app:layout_constraintTop_toBottomOf="@id/item_record_title_iv"
        app:layout_constraintBottom_toBottomOf="@id/item_record_circle_iv"/>

    <TextView
        android:id="@+id/item_record_clock_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/apple_sd_gothic_neo_sb"
        android:textSize="9sp"
        android:layout_marginStart="84dp"
        android:textColor="#BFBFBF"
        android:gravity="top"
        android:layout_marginBottom="0.5dp"
        android:text="16:45"
        app:layout_constraintStart_toEndOf="@id/item_record_circle_iv"
        app:layout_constraintBottom_toBottomOf="@id/item_record_title_iv"/>

    <ImageView
        android:id="@+id/item_record_pecil_iv"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginEnd="20dp"
        android:scaleType="fitXY"
        android:src="@drawable/memo_pencil_bluegray"
        app:layout_constraintBottom_toBottomOf="@id/item_record_circle_iv"
        app:layout_constraintEnd_toEndOf="@id/item_record_rectangle_iv"
        app:layout_constraintTop_toTopOf="@id/item_record_circle_iv" />


</androidx.constraintlayout.widget.ConstraintLayout>